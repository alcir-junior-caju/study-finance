<form method="post" action="{{ action }}">
    <div class="columns">
        <div class="column is-3">
            <div class="control has-icons-left">
                <input type="text" class="input is-large is-black" placeholder="Nome" name="first_name" value="{{ user.first_name }}">
                <span class="icon is-medium is-left">
                    <i class="fas fa-user-circle"></i>
                </span>
            </div>
        </div>
        <div class="column is-3">
            <div class="control has-icons-left">
                <input type="text" class="input is-large is-black" placeholder="SobreNome" name="last_name" value="{{ user.last_name }}">
                <span class="icon is-medium is-left">
                    <i class="fas fa-user-circle"></i>
                </span>
            </div>
        </div>
        <div class="column is-3">
            <div class="control has-icons-left">
                <input type="email" class="input is-large is-black" placeholder="Email" name="email" value="{{ user.email }}">
                <span class="icon is-medium is-left">
                    <i class="fas fa-envelope"></i>
                </span>
            </div>
        </div>
        <div class="column is-3">
            <div class="field has-addons">
                <div class="control has-icons-left">
                    <input type="password" class="input is-large is-black" placeholder="Senha" name="password">
                    <span class="icon is-medium is-left">
                        <i class="fas fa-key"></i>
                    </span>
                </div>
                <div class="control">
                    <button type="submit" class="button is-dark is-large">
                        <span class="icon">
                            <i class="fas {{ submitIcon }}"></i>
                        </span>
                        <span>{{ submitLabel }}</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>